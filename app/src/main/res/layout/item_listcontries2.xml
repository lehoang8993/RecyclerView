<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:background="#f0c800">

    <ImageView
        android:id="@+id/iv_Country2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="4"
        app:srcCompat="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ContryVN2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Itemlistview_NameContryVN"
            android:textColor="#f00000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_ContryEN2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Itemlistview_NameContryEN"
            android:textColor="#f00000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_CapitalVN2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Itemlistview_NameCapitalVN"
            android:textColor="#38f000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_CapitalEN2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Itemlistview_NameCapitalEN"
            android:textColor="#38f000"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>